-- Initial castr.cabal generated by cabal init.  For further documentation,
--  see http://haskell.org/cabal/users-guide/

name:                castr
version:             0.0.0
synopsis:            Simulates casting in a meritocracy
homepage:            //github.com/pharpend/castr
license:             PublicDomain
author:              Peter Harpending
maintainer:          Peter Harpending <pharpend2@gmail.com>
copyright:           None
category:            Math
build-type:          Simple
cabal-version:       >=1.10

library
  default-language:    Haskell2010
  hs-source-dirs:      src/
  ghc-options:         -Wall -O1
  default-extensions:
    OverloadedStrings
  exposed-modules:
    Math.Castr.Agent
  build-depends:
      aeson      >=0.7  && <0.9
    , base       >=4    && <5
    , mwc-random >=0.13 && <0.14
    , statistics >=0.13 && <0.14
    , vector     >=0.10 && <0.11

executable castr
  default-extensions:
    DeriveDataTypeable
    OverloadedStrings
  main-is:             Main.hs
  build-depends:
      aeson        >=0.7  && <0.9
    , aeson-pretty >=0.7  && <0.8
    , base         >=4.7  && <4.8
    , bytestring   >=0.10 && <0.11
    , castr
  default-language:    Haskell2010
  ghc-options: -Wall -O1

